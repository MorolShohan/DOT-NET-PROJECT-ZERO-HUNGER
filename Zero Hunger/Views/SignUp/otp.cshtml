@{
    ViewBag.Title = "OTP Verification";
}

<style>
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-container {
        max-width: 400px;
        width: 100%;
    }

    .card {
        background-color: #f8f9fa; /* Set the background color of the card */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Add border style for the button */
    .btn-verify {
        border: 1px solid #007bff;
        background-color: #007bff;
        color: #fff;
    }

        .btn-verify:hover {
            background-color: #0056b3;
            border: 1px solid #0056b3;
        }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="center-container">
    <div class="container form-container">
        <div class="card">
            <!-- Add the card container -->
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm("otp", "SignUp", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="otp" class="control-label">Enter OTP:</label>
                    <input type="text" name="otp" id="otp" class="form-control" autofocus="autofocus" required>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-verify">Verify OTP</button> <!-- Apply the button style -->
                </div>
            }
            @Html.ActionLink("Back To Signup page", "Index", "SignUp")
        </div>
    </div>
</div>
